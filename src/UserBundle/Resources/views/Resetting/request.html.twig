{% extends "layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block titre %}réinitialiser mon mot de passe{% endblock %}
{% block content %}

<div class="containertemplatemini">

    <div class="connexion col m10 blue-grey lighten-5 offset-s1 left-align">

        <div class="row">

            <div class="left-align col s10 offset-s1">

                <h1 class="lime-text text-darken-2 h1form">Réinitialiser mon mot de passe</h1>


                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">

                    <div class="row">
                        <div class="col s12">
                            <div class="input-field">
                                <label for="username">Pseudo ou email</label>
                                <input type="text" id="username" name="username" required="required" />
                            </div>
                        </div>
                    </div>

                    <br />


                    <div class="row">
                        <div class="col s12 center-align">
                            <input type="submit" class="btn-large waves-effect waves-light deep-orange darken-4 centerbtn" value="Valider" id="_submit">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


{% endblock content %}
