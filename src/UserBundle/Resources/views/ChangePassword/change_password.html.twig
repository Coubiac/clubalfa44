{% extends "layout.html.twig" %}
{% block metaDescription %}
    NAO. Site participatif de collecte d’observations d’oiseau. Modifier mon mot de passe.
{% endblock %}
{% block titre %}modifier mon mot de passe{% endblock %}
{% block content %}


    <div class="containertemplatemini">

        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password col-lg-4 form-horizontal' } }) }}

        <div class="profil col m10 blue-grey lighten-5 offset-s1 left-align">
            <div class="row">

                <div class="left-align col s10 offset-s1">
                    <h1 class="lime-text text-darken-2 h1form">Modifier mon mot de passe</h1>
                    <br />

                    <div id="fos_user_change_password">

                        <div class="row">
                            <div class="col s12">
                                <div class="input-field">
                                    {{ form_label(form.current_password) }}
                                    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.current_password) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12">
                                <div class="input-field">
                                    {{ form_label(form.plainPassword.first) }}
                                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.plainPassword.first) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12">
                                <div class="input-field">
                                    {{ form_label(form.plainPassword.second) }}
                                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.plainPassword.second) }}
                                </div>
                            </div>
                        </div>

                        {{ form_rest(form) }}
                        <br />

                        <input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}" />
                        <input type="submit" class="btn-large waves-effect waves-light deep-orange darken-4 right" value="{{ 'Valider' }}" id="_submit">

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

















{% endblock content %}
