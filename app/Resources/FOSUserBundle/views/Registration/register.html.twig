{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}
{% block fos_user_content %}
        <div class="section"></div>


        <h5 class="alfa-fonce-text" style="text-align: center">Bienvenue ! Créez votre compte !</h5>
        <div class="section"></div>

        <div class="container" style="display: block;">
            <div class="z-depth-1 grey lighten-4 row"
                 style="display: block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;margin-left: auto;margin-right: auto;">
                {{ form_start(form, { 'action': path('fos_user_registration_register'), 'attr': { 'class': 'fos_user_registration_register' } }) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}

            </div>
            <div class="z-depth-1 grey lighten-4 row"
                 style="display: block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;margin-left: auto;margin-right: auto;">
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.adresse) }}
                {{ form_row(form.codePostal) }}
                {{ form_row(form.ville) }}
                {{ form_row(form.birthdate) }}
                {{ form_row(form.telephoneFixe) }}
                {{ form_row(form.telephonePortable) }}
                {{ form_row(form.authorisationPhoto) }}

            </div>

            <br/>
            <center>
                <div class='row'>
                    <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect alfa-fonce'>
                        Connexion
                    </button>
                </div>
            </center>
            {{ form_end(form) }}

        </div>

        <a style="display:block;text-align:center;" href="{{ path("fos_user_security_login") }}">Vous avez déja un compte ?</a>



    {% endblock %}
