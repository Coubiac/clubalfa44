{% extends "base.html.twig" %}
{% block titre %}Réinitialisation du mot de passe{% endblock titre %}

{% block fos_user_content %}
    <div class="section"></div>
    <h5 class="alfa-fonce-text" style="text-align: center">Merci de saisir votre nom d'utilisateur</h5>
    <h6 class="alfa-fonce-text" style="text-align: center">Un email vous sera envoyé pour réinitialiser votre mot de passe</h6>
    <div class="section"></div>
    <div class="container" style="display: flex;">
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;margin-left: auto;margin-right: auto;">

            <form class="col s12" action="{{ path('fos_user_resetting_send_email') }}" method="post">
                <div class='row'>
                    <div class='col s12'>
                    </div>
                </div>

                <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate' type="text" name='username' id='username' />
                        <label for='username'>Nom d'utilisateur</label>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                <br />
                <center>
                    <div class='row'>
                        <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect alfa-fonce'>Envoyer</button>
                    </div>
                </center>
            </form>
        </div>
    </div>
    <a style="display:block;text-align:center;" href="{{ path("fos_user_registration_register") }}">Créer un compte</a>
{% endblock fos_user_content %}
