{% extends 'baseindex.html.twig' %}
{%  block title %}{{ contenu.titre }}{% endblock %}
{% block description %}{{ contenu.description }}{% endblock %}

{% block main %}
        <video class="hide-on-med-and-down" id="video1" autoplay style="width: 100%">
            <source src="{{ asset('videos/alfa.webm') }}" type="video/webm" />
            <source src="{{ asset('videos/alfa.mp4') }}" type="video/mp4">
            <source src="{{ asset('videos/alfa.ogv') }}" type="video/ogv" />


            <p>Your browser does not support the video tag.</p>
        </video>
        {#////////////////////////////////////////////////////////////////#}


    <div class="logo-small black hide-on-large-only">
        <img class="center-block" src="{{ asset("images/logo-banner.jpg") }}" alt="club alfa 44">
    </div>

    {#////////////////////////////////////////////////////////////////#}


    <div class="center-block container_accueil z-depth-2">

        <div class="row activites">
            <div class="col s12 m6 l3">
                <div class="card cardhome">
                    <div class="card-image">
                        <img src="{{ asset('images/lutte.png') }}">
                    </div>
                    <div class="card-action">
                        <a href="{{ path("page-statique", {'parent': 'lutte', 'enfant': 'presentation'}) }}" class="indigo-text text-darken-4">Lutte</a>
                    </div>
                </div>
            </div>

            <div class="col s12 m6 l3">
                <div class="card cardhome">
                    <div class="card-image">
                        <img src="{{ asset('images/fitness.png') }}">
                    </div>
                    <div class="card-action">
                        <a href="{{ path("page-statique", {'parent': 'fitness', 'enfant': 'presentation'}) }}" class="center-align indigo-text text-darken-4">Fitness</a>
                    </div>
                </div>
            </div>

            <div class="col s12 m6 l3">
                <div class="card cardhome">
                    <div class="card-image">
                        <img src="{{ asset('images/musculation.png') }}">
                    </div>
                    <div class="card-action">
                        <a href="{{ path("page-statique", {'parent': 'musculation', 'enfant': 'presentation'}) }}" class="indigo-text text-darken-4">Musculation</a>
                    </div>
                </div>
            </div>

            <div class="col s12 m6 l3">
                <div class="card cardhome">
                    <div class="card-image">
                        <img src="{{ asset('images/grappling.png') }}">
                    </div>
                    <div class="card-action">
                        <a href="{{ path("page-statique", {'parent': 'grappling-fight', 'enfant': 'presentation'}) }}" class="indigo-text text-darken-4">Grappling-Fight</a>
                    </div>
                </div>
            </div>

        </div>
        <hr id="ancre_other_page" class="scrollspy hr_encart">
        <br>


        <div class="row">

            <div class="col l12">

                <div id="ancre_scroll" class="scrollspy">
                    {{ contenu.contenu|raw }}
                </div>
            </div>

        </div>


    </div>


    {#///////////////////////#}
    <br/>


{% endblock %}
