{% extends 'base.html.twig' %}
{% block title %}{{ evenement.titre }}{% endblock %}
{% block description %}{{ evenement.description }}{% endblock %}
{% block titre %}{{ evenement.titre }}{% endblock %}

{% block main %}
<div class="container">
    <div class="row">
        <div class="col s12">
    {{ evenement.contenu|raw }}
        </div>
    </div>

    <div class="row">

        {% for photo in photos %}
            <div class="col s12 m4">
                <img class="materialboxed responsive-img" data-caption='{{ evenement.titre }} - {{ evenement.date|date('d/m/Y') }}' src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('photos') }}">

            </div>

        {% endfor %}

    </div>

</div>




{% endblock %}
