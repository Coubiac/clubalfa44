{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        {% if type == 'danger' %}
            {% set bgcolor ='red lighten-3' %}
            {% set fontcolor ='red-text text-darken-4' %}
        {% else %}
            {% set bgcolor ='green lighten-4' %}
            {% set fontcolor ='green-text text-darken-2' %}
        {% endif %}


        <div class="row" id="alert_box">
            <div class="col s12 m12">
                <div class="card {{ bgcolor }}">
                    <div class="row">
                        <div class="col s12 m10">
                            <div class="card-content {{ fontcolor }}">
                                {{ message | rawdescr }}
                            </div>
                        </div>
                        <div class="col s12 m2 {{ fontcolor }}">
                            <i class="material-icons icon_style" id="alert_close" aria-hidden="true">clear</i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}
